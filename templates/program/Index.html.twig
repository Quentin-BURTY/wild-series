{% extends 'base.html.twig' %}

{% block title %}Programmes{% endblock %}

{% block body %}
	{# templates/program/index.html.twig #}

	{# ... #}
	{% for program in programs %}
			<div>
				<h2 class="text-light">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
				<p class="text-light"
				>{{ program.summary }}</p>
				{# Lien vers la fiche de la série : #}
				<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
			</div>
	{% endfor %}
	{# ... #}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}